<section ng-controller="NotificationCtrl as e" class="panel col-lg-6">
	<header class="panel-heading"><span ng-bind="actionTitle"></span> Notification</header>
	<div class="panel-body">
		<form name="notificationForm" novalidate>
			<div class="form-group">
				<label class="control-label">Name<span class="required-symbol">*</span></label>
				<input 
					type="text" 
					ng-model="data.name"
					class="form-control"
					required
				>
			</div>
			<div class="form-group">
				<label class="control-label">Description</label>
				<textarea
					ng-model="data.description"
					class="form-control"
				></textarea>
			</div>
			<div class="form-group">
				<label class="control-label">Show Action User As Title</label>
				<select
					ng-model="data.userAsTitle"
					class="form-control"
				>
					<option value="true">True</option>
					<option value="false">False</option>
				</select>
			</div>
			<div 
				class="form-group"
				ng-show="data.userAsTitle=='false'"
			>
				<label class="control-label">Title<span class="required-symbol">*</span></label>
				<input 
					type="text" 
					ng-model="data.title"
					ng-required="data.userAsTitle=='true'"
					class="form-control"
					required
				>
			</div>			
			<div class="form-group">
				<label class="control-label">Type</label>
				<select 
					ng-model="data.type"
					class="form-control"
					required
				>
					<option value="">-Select a Type-</option>
					<option value="alert">Alert</option>
					<option value="prompt">Prompt</option>
				</select>
			</div>
			<div class="form-group">
				<label class="control-label">Message</label>
				<textarea
					ng-model="data.message"
					class="form-control"
				></textarea>
			</div>
			<div 
				ng-show="data.type == 'prompt'"
				class="form-group"
			>
				<h4>Prompt Inputs</h4>
			</div>
			<div>
				<button 
				type="button" 
				class="btn btn-primary pull-right" 
				ng-click="submit()"
				ng-disabled="notificationForm.$invalid"
				ng-bind="actionButton"
			></button>
			</div>			
		</form>		
	</div>
</section>