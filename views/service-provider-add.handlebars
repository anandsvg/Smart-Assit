<section ng-controller="ServiceProviderAddCtrl as sp" class="panel col-lg-6">
	<header class="panel-heading">Add Service Provider</header>
	<div class="panel-body">
		<form  id="add-service-provider" role="form" class="" ng-submit="sp.add(data);">
			<div class="form-group">
				<label>Service Provider</label>
				<input type="text" class="form-control" ng-model="data.company" required focus>
			</div>
			<div class="form-group">
				<label>First Name</label>
				<input type="text" class="form-control" ng-model="data.firstName" required>
			</div>
			<div class="form-group">
				<label>Last Name</label>
				<input type="text" class="form-control" ng-model="data.lastName" required>
			</div>						
			<div class="form-group">
				<label>Email</label>
				<input type="email" class="form-control" ng-model="data.email" required>
			</div>
			<div>
				<button type="submit" class="btn btn-primary pull-right">Submit</button>
			</div>		
		</form>		
	</div>
</section>